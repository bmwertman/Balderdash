<div>
  <table>
    <thead>
      <tr>
        <td>Player Name</td>
        <td>Score</td>
      </tr>
    </thead>
    <tbody>
      <% @players.each do |player| %>
        <tr><td><%= player.user.name %></td><td><%= player.score %></td></tr>
      <% end %>
    </tbody>
  </table>
</div>

<div id="winner">
  <% @winners.each do |winner| %>
  <% if @winners.count == 1 %>
    <h1>Congratulations <%= winner.user.name %>!</h1>
  <% elsif @winners.count > 1 %>
    <h1><%= winner.user.name %></h1>
    <% end %>
    <% end %>
    <h1>have tied for 1st place!</h1>
  </div>

  <%= link_to "Return to Games Page", games_path %>

